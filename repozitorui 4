    print(False)

# Задание 3
lamp_1 = 0
lamp_2 = 0
print("Какую лампочку зажечь?")
answer = input()
if answer == "1":
    lamp_1 = 1
    print(f"lamp_1 = {lamp_1}, lamp_2 = {lamp_2}")
elif answer == "2":
    lamp_2 = 1
    print(f"lamp_1 = {lamp_1}, lamp_2 = {lamp_2}")
else:
    print("Обе лампочки не горят")
#В 9 Задание 1
switch_1 = False
switch_2 = False
answer = input("Включить? ")
if answer.lower() == "да":
    switch_1 = True
    switch_2 = True
    print("Всё включено")
    print(f"switch_1 = {switch_1}, switch_2 = {switch_2}")
else:
    print(f"switch_1 = {switch_1}, switch_2 = {switch_2}")

