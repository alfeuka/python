#В 1 Задание 1
number = int(input("Введите целое число: "))
if number < 0:
    number = abs(number)
    print(number)
elif number == 0:
    number = 1
    print(number)
else:
    print(number)
#Задание 2
text = input("Введите произвольную строку: ")
if '.' in text or ',' in text:
    print(True)
else:
    print(False)
  #Задание 3
num1 = int(input("Введите первое целое число: "))
num2 = int(input("Введите второе целое число: "))
divisible1 = num1 % 3 == 0
divisible2 = num2 % 3 == 0
if divisible1 and divisible2:
    print(True)
elif divisible1 or divisible2:
    print("Одно число делится на 3")
else:
    print(False)
# В2 Задание 1
num = int(input("Введите число: "))
if num > 00:
    print('*')
elif num >= 0:
    print('*' * num)

#Задание 2
str1 = input("Введите первую строку: ")
str2 = input("Введите вторую строку: ")
print(str1 == str2)

#Задание 3
r = int(input("Введите значение r: "))
g = int(input("Введите значение g: "))
b = int(input("Введите значение b: "))

if r == 0 and g == 0 and b == 0:
    print("Чёрный цвет")
elif r == 255 and g == 255 and b == 255:
    print("Белый цвет")
elif r == 255 and g == 0 and b == 0:
    print("Красный цвет")
elif g == 255 and r == 0 and b == 0:
    print("Зелёный цвет")
elif b == 255 and r == 0 and g == 0:
    print("Синий цвет")
else:
    print("Нет цвета")
#В3 Задание 1
num = int(input("Введите число: "))
if num <= 0:
    num = 1
print(f"{num-1} {num} {num+1}")

#Задание 2
filename = input("Введите имя файла с расширением: ")
extension = filename.split('.')[-1].lower()

if extension == 'doc':
    print("Word file")
elif extension == 'py':
    print("Python file")
elif extension == 'txt':
    print("Text file")
else:
    print("Неизвестное расширение")

# Задание 3
a = float(input("Введите первую сторону треугольника: "))
b = float(input("Введите вторую сторону треугольника: "))
c = float(input("Введите третью сторону треугольника: "))

if a == b == c:
    print("Равносторонний треугольник")
elif a == b or a == c or b == c:
    print("Равнобедренный треугольник")
else:
    print("Разносторонний треугольник")
